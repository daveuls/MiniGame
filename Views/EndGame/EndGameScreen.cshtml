@model Name_Game.Models.Selections
@{
    ViewBag.Title = "EndGameScreen";
}

<style type="text/css">
    body {
        padding: 0;
    }

    .body-content {
        padding-left: 0;
        padding-right: 0;
    }

    * {
        margin: 0;
        padding: 0;
        border: 0;
        box-sizing: border-box;
    }

    #container {
        min-height: 100vh;
    }

    .top {
        height: 50vh;
        background-color: #223547;
    }

    .img-responsive {
        align-content: center;
        padding-left: 40%;
        padding-right: 40%;
    }

    .img-shapes {
        padding-top: 20px;
    }

    .text-congrats {
        padding-top: 20px;
        color: white;
        font-size: 24px;
    }

    .btn {
        width: 25%;
        background-color: #15659D;
        border: none;
        color: white;
        margin-left: auto;
        margin-right: auto;
    }

    .bottom {
        height: 50vh;
        background-color: white;
    }
</style>

<body>
    @{ 
        var correctSelections = Model.Correct;
        var incorrectSelections = Model.Incorrect;

        <div id="container">
            <div class="top">
                <div class="text-center">
                    <img src="~/Content/Images/TheNameGame.png" class="img-responsive" />
                </div>
                <div class="text-center img-shapes">
                    <img src="~/Content/Images/Shapes.png" />
                </div>
                <div class="text-center">
                    <img src="~/Content/Images/Congrats.png" />
                </div>
                <div class="col-lg-12 text-center text-congrats">
                    <p class="text">Congratulations, you scored @correctSelections/5!</p>
                </div>
            </div>
            <div class="text-center">
                <a href="~/Home/StartScreen" class="btn">Return to Home</a>
            </div>
            <div class="bottom">

            </div>
        </div>
    }
</body>

